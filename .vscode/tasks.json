	"version": "2.0.0",
	"tasks": [
		{
			"label": "hotreload",
			"type": "shell",
			"command": "if (-not (Test-Path out/image.ppm)) { mkdir out -Force; make run; code out/image.ppm } else { code out/image.ppm }; while ($true) { make run; Start-Sleep -Milliseconds 500 }",
			"problemMatcher": [],
		}
	]
}